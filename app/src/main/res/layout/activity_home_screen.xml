<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <LinearLayout
        android:id="@+id/fullscreenLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/backgroundImageHome"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/home" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/joy"
                    android:layout_width="118dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginBottom="8dp"
                    android:text="100% Joy"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/hunger"
                    android:layout_width="125dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="100% Hunger"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/health"
                    android:layout_width="111dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginBottom="15dp"
                    android:text="100% health"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintBottom_toTopOf="@+id/joy"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/nameOfPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nameYourPet"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.215"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.01" />

                <ImageView
                    android:id="@+id/feedButton"
                    android:layout_width="168dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="41dp"
                    android:background="@drawable/feedbutton"
                    android:contentDescription="@string/feedPet"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/health"
                    app:layout_constraintTop_toBottomOf="@+id/homescreenEgg"
                    app:srcCompat="@android:drawable/btn_dialog" />

                <ImageView
                    android:id="@+id/doorButton"
                    android:layout_width="44dp"
                    android:layout_height="180dp"
                    android:background="@drawable/doorbutton"
                    android:contentDescription="@string/ContinueOutside"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.046"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.763"
                    app:srcCompat="@android:drawable/btn_dialog" />

                <ImageView
                    android:id="@+id/settingsButton"
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:background="@drawable/optionsbutton"
                    android:contentDescription="@string/continueSettings"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.042"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.002"
                    app:srcCompat="@android:drawable/btn_dialog" />

                <ImageView
                    android:id="@+id/homescreenEgg"
                    android:layout_width="145dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="340dp"
                    android:contentDescription="@string/petEggImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.451"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/animal1" />

                <ImageButton
                    android:id="@+id/TrophyButton"
                    android:layout_width="57dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="109dp"
                    android:layout_marginEnd="46dp"
                    android:layout_marginBottom="418dp"
                    android:background="@drawable/trophybutton"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/feedButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/trophybutton" />

                <ImageView
                    android:id="@+id/window"
                    android:layout_width="120dp"
                    android:layout_height="128dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginBottom="22dp"
                    app:layout_constraintBottom_toTopOf="@+id/doorButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/window" />

                <ImageView
                    android:id="@+id/hundreds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="73dp"
                    android:layout_marginBottom="42dp"
                    app:layout_constraintBottom_toTopOf="@+id/window"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/number10" />

                <ImageView
                    android:id="@+id/tens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="42dp"
                    app:layout_constraintBottom_toTopOf="@+id/window"
                    app:layout_constraintStart_toEndOf="@+id/hundreds"
                    app:srcCompat="@drawable/number10" />

                <ImageView
                    android:id="@+id/ones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="42dp"
                    app:layout_constraintBottom_toTopOf="@+id/window"
                    app:layout_constraintStart_toEndOf="@+id/tens"
                    app:srcCompat="@drawable/number10" />

                <ImageView
                    android:id="@+id/happyStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/homescreenEgg"
                    app:layout_constraintEnd_toEndOf="@+id/homescreenEgg"
                    app:layout_constraintHorizontal_bias="0.75"
                    app:layout_constraintStart_toStartOf="@+id/homescreenEgg"
                    app:layout_constraintTop_toTopOf="@+id/homescreenEgg"
                    app:layout_constraintVertical_bias="0.26"
                    app:srcCompat="@android:drawable/btn_dialog" />

                <ImageView
                    android:id="@+id/happyStar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/homescreenEgg"
                    app:layout_constraintEnd_toEndOf="@+id/homescreenEgg"
                    app:layout_constraintHorizontal_bias="0.75"
                    app:layout_constraintStart_toStartOf="@+id/homescreenEgg"
                    app:layout_constraintTop_toTopOf="@+id/homescreenEgg"
                    app:layout_constraintVertical_bias="0.26"
                    app:srcCompat="@android:drawable/btn_dialog" />

                <ImageView
                    android:id="@+id/happyStar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/homescreenEgg"
                    app:layout_constraintEnd_toEndOf="@+id/homescreenEgg"
                    app:layout_constraintHorizontal_bias="0.75"
                    app:layout_constraintStart_toStartOf="@+id/homescreenEgg"
                    app:layout_constraintTop_toTopOf="@+id/homescreenEgg"
                    app:layout_constraintVertical_bias="0.26"
                    app:srcCompat="@android:drawable/btn_dialog" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>